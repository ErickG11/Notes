<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Notes.ViewModels"
             x:Class="Notes.Views.AboutPage">
    <ContentPage.BindingContext>
        <viewModels:AboutViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">

            <Image Source="descarga.jpeg"
                SemanticProperties.Description="campeon mundial"
                HeightRequest="300"
                WidthRequest="300" />
            
        </HorizontalStackLayout>
        
        <Label Text="Erick Granda"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />


        <Label Text="Soy Erick Granda y tengo 21 aÃ±os de edad, mis pasatiempos son el basketball y el gimnasio, tambien me gusta programar y todo el mundo de las computadoras, quiero llegar a ser el mejor en mi trabajo y aprende mucho sobre desarrollo web"
            FontSize="16"
            LineHeight="1.5"
            HorizontalTextAlignment="Center" />

        <Label Text="{Binding Message}" />
        <Button Text="Learn more..." Command="{Binding ShowMoreInfoCommand}" />
    </VerticalStackLayout>

</ContentPage>